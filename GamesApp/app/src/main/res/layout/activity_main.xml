<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.first.thegamedb.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/SearchET"  />

    <Button
        android:text="@string/Search"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/SearchET"
        android:layout_toEndOf="@+id/SearchET"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/searchBtn"
        android:background="@drawable/button_enable"
        android:textColor="@color/colorBtnTxt"
        android:onClick="onClickSearch" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/listView"
        android:layout_above="@+id/goBtn"
        android:background="@drawable/border"/>

    <Button
        android:text="@string/go"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/goBtn"
        android:background="@drawable/button_disabled"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:onClick="onClickGo" />


</RelativeLayout>
